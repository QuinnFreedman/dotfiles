" Type :h vintageousrc for help.

set clipboard=unnamedplus

" nnoremap <C-n> :lnext<CR>
" nnoremap <C-m> :lprevious<CR>

nnoremap c "_c
nnoremap C "_C
nnoremap x "_x
nnoremap s "_s
vnoremap p "_dP
vnoremap x "_x
vnoremap s "_s

nnoremap Y y$

nnoremap gs :LspDocumentSymbols<CR>
nnoremap gd :LspSymbolDefinition<CR>
nnoremap K :LspHover<CR>

nnoremap <space>j <C-w>j
nnoremap <space>k <C-w>k
nnoremap <space>h <C-w>h
nnoremap <space>l <C-w>l
nnoremap <space>v :vs<CR> 
nnoremap <space>s :sp<CR>
nnoremap <space>q :close<CR> 

vnoremap <Space>j <C-w>j
vnoremap <Space>k <C-w>k
vnoremap <Space>h <C-w>h
vnoremap <Space>l <C-w>l
vnoremap <Space>v :vs<CR> 
vnoremap <Space>s :sp<CR> 
vnoremap <Space>q :close<CR>

nnoremap <leader>w :w<cr>
vnoremap <leader>w :w<cr>

nnoremap <C-j> <C-d>zz
nnoremap <C-k> <C-u>zz

vnoremap <Space>; gc
nnoremap <Space>; gc
nnoremap <Space>;; gc_

" map <leader>f <Plug>(easymotion-bd-w)
" map <leader>g <Plug>(easymotion-overwin-line)

